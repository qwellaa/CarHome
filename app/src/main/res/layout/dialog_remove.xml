<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="#80b5b5b5"
    android:id="@+id/ll_dialog_remove">
    <TextView
        android:id="@+id/tv_clear_search_history"
        android:background="#fff"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_remove_title"/>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancel_dialog"
            android:text="取消"
            android:textSize="17sp"
            android:textColor="@color/blue"
            android:background="@drawable/btn_write_click_bg"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_determine_dialog"
            android:text="确定"
            android:textSize="17sp"
            android:textColor="@color/blue"
            android:layout_marginLeft="1dp"
            android:background="@drawable/btn_write_click_bg"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>